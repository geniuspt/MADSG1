<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @page.name %>
</p>

<p>
  <b>Project:</b>
  <%= @page.project %>
</p>

<% if @state.nil? %>
<p>
  <b>Esta página ainda não foi criada. Seja o primeiro a criá-la!</b>
</p>
<% else %>
<p>
  <b>Body</b>
  <%= @state.body %>
</p>

<p>
  <b>Updated at:</b>
  <%= @state.updated_at %>
</p>
<% end %>


